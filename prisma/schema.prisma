// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Chat {
  id           Int      @id @default(autoincrement())
  participants User[]
  startedAt    DateTime @default(now())
  endedAt      DateTime
}

model ChatMessage {
  id      Int    @id @default(autoincrement())
  chatId  Int
  message String
}

model User {
  id          Int           @id @default(autoincrement())
  email       String        @unique
  firstName   String
  lastName    String
  address     String
  postalCode  String
  city        String
  phoneNumber String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime
  roleId      Int
  Chat        Chat?         @relation(fields: [chatId], references: [id])
  chatId      Int?
  JournalPost JournalPost[]
}

model Role {
  id        Int      @id @default(autoincrement())
  roleName  String
  createdAt DateTime @default(now())
  UpdatedAt DateTime
}

model JournalInfo {
  id        Int           @id @default(autoincrement())
  ssn       String        @unique
  firstName String
  lastName  String
  posts     JournalPost[]
}

model JournalPost {
  id            Int          @id @default(autoincrement())
  text          String
  createdAt     DateTime     @default(now())
  UpdatedAt     DateTime
  signedBy      User         @relation(fields: [userId], references: [id])
  userId        Int
  JournalInfo   JournalInfo? @relation(fields: [journalInfoId], references: [id])
  journalInfoId Int?
}
